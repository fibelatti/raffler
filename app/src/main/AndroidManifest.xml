<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fibelatti.raffler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RafflerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${fabricApiKey}" />

        <activity
            android:name=".views.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.activities.GroupActivity"
            android:label="@string/label_group_activity"
            android:parentActivityName="com.fibelatti.raffler.views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fibelatti.raffler.views.activities.MainActivity" />
        </activity>

        <activity
            android:name=".views.activities.GroupFormActivity"
            android:label="@string/label_group_form_activity"
            android:parentActivityName=".views.activities.GroupActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.GroupActivity" />

            <!-- Intent filter for opening files from system -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="application/json" />
                <data android:pathPattern=".*\\.rflr" />
            </intent-filter>
            <!-- Intent filter for open files from email -->
            <intent-filter android:label="@string/app_name">
                <data android:scheme="content" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="application/octet-stream" />
                <data android:pathPattern=".*\\.rflr" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.activities.RouletteActivity"
            android:label="@string/label_roulette_activity"
            android:parentActivityName=".views.activities.GroupActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.GroupActivity" />
        </activity>

        <activity
            android:name=".views.activities.NWinnersActivity"
            android:label="@string/label_nwinners_activity"
            android:parentActivityName=".views.activities.GroupActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.GroupActivity" />
        </activity>

        <activity
            android:name=".views.activities.SubGroupsActivity"
            android:label="@string/label_subgroups_activity"
            android:parentActivityName=".views.activities.GroupActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.GroupActivity" />
        </activity>

        <activity
            android:name=".views.activities.SettingsActivity"
            android:label="@string/label_settings_activity"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.MainActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="@string/file_provider_authority"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />
        </provider>
    </application>

</manifest>
