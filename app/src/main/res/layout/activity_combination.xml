<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".views.activities.CombinationActivity">

    <include layout="@layout/toolbar_default"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_title_combined_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/combination_combined_groups_title"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_regular"/>

        <include
            android:id="@+id/divider_combined_groups"
            layout="@layout/divider_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_below="@+id/tv_title_combined_groups"/>

        <Button
            android:id="@+id/button_group_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_combined_groups"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/combination_button_placeholder"
            android:theme="@style/AboutButton"/>

        <ImageView
            android:id="@+id/iv_add_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_group_one"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/ic_add_circle_white"
            android:tint="@color/colorAccent"/>

        <Button
            android:id="@+id/button_group_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_add_icon"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/combination_button_placeholder"
            android:theme="@style/AboutButton"/>

        <LinearLayout
            android:id="@+id/layout_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_group_two"
            android:layout_marginBottom="@dimen/margin_smaller"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/InputLayout">

                <EditText
                    android:id="@+id/input_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/combination_hint_quantity"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="@integer/text_max_length_3"
                    android:singleLine="true"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_size_regular"/>
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_raffle_combinations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@null"
                android:contentDescription="@string/combination_action_raffle"
                android:src="@drawable/ic_play_circle_white"
                android:text="@string/subgroups_action_raffle"
                android:tint="@color/colorAccent"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_quantity"
            android:scrollbars="vertical"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
